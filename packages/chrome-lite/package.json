{
  "name": "chrome-lite-mcp",
  "version": "0.3.1",
  "description": "Lightweight MCP wrapper for Chrome DevTools - consolidates 44 tools into 1 (GIF recording, tabs, shortcuts, plan, upload)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "chrome-lite-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "chrome",
    "devtools",
    "puppeteer",
    "model-context-protocol",
    "claude",
    "ai",
    "browser-automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "canvas": "^3.2.0",
    "gif-encoder-2": "^1.0.5",
    "puppeteer-core": "^23.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^1.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
